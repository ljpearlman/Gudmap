<?xml version="1.0"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
         
	<description>Empty web.xml file for Web Application</description>

	<display-name>GUDMAP</display-name>

	<context-param>
		<param-name>javax.faces.STATE_SAVING_METHOD</param-name>
		<param-value>server</param-value>
	</context-param>
 
<!-- Plugging the "Blue Sky" skin into the project -->
               <context-param>
                  <param-name>org.richfaces.SKIN</param-name>
                  <param-value>blueSky</param-value>
               </context-param>
               
               <!-- Making the RichFaces skin spread to standard HTML controls -->
               <context-param>
                     <param-name>org.richfaces.CONTROL_SKINNING</param-name>
                     <param-value>enable</param-value>
               </context-param>
               
               <!-- Defining and mapping the RichFaces filter -->
               <filter> 
                  <display-name>RichFaces Filter</display-name> 
                  <filter-name>richfaces</filter-name> 
                  <filter-class>org.ajax4jsf.Filter</filter-class> 
               </filter> 
               <filter-mapping> 
                  <filter-name>richfaces</filter-name> 
                  <servlet-name>Faces Servlet</servlet-name>
                  <dispatcher>REQUEST</dispatcher>
                  <dispatcher>FORWARD</dispatcher>
                  <dispatcher>INCLUDE</dispatcher>
               </filter-mapping>
               
               	<context-param>
               		<param-name>org.ajax4jsf.COMPRESS_SCRIPT</param-name>
               		<param-value>false</param-value>
               	</context-param>
               
               <listener>
                  <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
               </listener>

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>

	<context-param>
        	<param-name>com.sun.faces.enableRestoreView11Compatibility</param-name>
        	<param-value>true</param-value>
  	</context-param>

	<filter>
		<filter-name>GudmapSessionTimeoutFilter</filter-name>
		<filter-class>gmerg.control.GudmapSessionTimeoutFilter</filter-class>
	</filter>
	<filter>
		<filter-name>GudmapTrackingIPFilter</filter-name>
		<filter-class>gmerg.control.GudmapTrackingIPFilter</filter-class>
	</filter>
	<filter>
		<filter-name>GudmapAccessRestrictionFilter</filter-name>
		<filter-class>gmerg.control.GudmapAccessRestrictionFilter</filter-class>
	</filter>
	<filter>
		<filter-name>GudmapParameterMappingFilter</filter-name>
		<filter-class>gmerg.control.GudmapParameterMappingFilter</filter-class>
	</filter>
	<filter>
		<filter-name>GudmapPageHistoryFilter</filter-name>
		<filter-class>gmerg.control.GudmapPageHistoryFilter</filter-class>
	</filter>
	<filter>
		<filter-name>GudmapDynamicImageFilter</filter-name>
		<filter-class>gmerg.control.GudmapDynamicImageFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>MyFacesExtensionsFilter</filter-name>
		<filter-class>org.apache.myfaces.webapp.filter.ExtensionsFilter</filter-class>
		<init-param>
			<param-name>uploadMaxFileSize</param-name>
			<param-value>100k</param-value>
		</init-param>
		<init-param>
			<param-name>uploadThresholdSize</param-name>
			<param-value>100k</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>GudmapSessionTimeoutFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>GudmapTrackingIPFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>GudmapAccessRestrictionFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>GudmapParameterMappingFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>GudmapPageHistoryFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>GudmapDynamicImageFilter</filter-name>
		<url-pattern>/dynamicimages/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>GudmapDynamicImageFilter</filter-name>
		<url-pattern>/dynamicImages/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>MyFacesExtensionsFilter</filter-name>
		<servlet-name>Faces Servlet</servlet-name>
	</filter-mapping>
	<filter-mapping>
		<filter-name>MyFacesExtensionsFilter</filter-name>
		<url-pattern>/faces/myFacesExtensionResource/*</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.htm</url-pattern>
		</jsp-property-group>
		<jsp-property-group>
			<display-name>gudmap</display-name>
			<url-pattern>*.jsp</url-pattern>
			<el-ignored>false</el-ignored>
			<scripting-invalid>false</scripting-invalid>
			<is-xml>false</is-xml>
		</jsp-property-group>
	</jsp-config>

                <session-config>
                                <session-timeout>-1</session-timeout> 
                </session-config>
	
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
  	
	<error-page>
	  <error-code>401</error-code>
	  <location>/errordocs/unauthorised.html</location>
	</error-page>
	
	<error-page>
	  <error-code>403</error-code>
	  <location>/errordocs/unauthorised.html</location>
	</error-page>
	
	<error-page>
	  <error-code>404</error-code>
	  <location>/errordocs/not_found.html</location>
	</error-page>
	
	<error-page>
	  <error-code>500</error-code>
	  <location>/errordocs/server_error.html</location>
	</error-page>

</web-app>
